@model AppASV.Models.Genre
@{
    ViewBag.Titlu = "Adding a new genre";
}

<h2>@ViewBag.Titlu</h2>
<form method="post" action="/Genre/New">

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.Label("Name", "Genre name")
    <br />
    @Html.TextBox("Name", null, new { @class = "form-control" })
    <br /><br />
    
    <button class="btn btn-sm btn-success" type="submit">Add genre</button>
</form>

